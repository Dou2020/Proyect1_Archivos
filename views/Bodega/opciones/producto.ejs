<% if (data){ %>
    <div class="container">
        <h1 style="text-align: center;">Modificar Producto <%= data.cod_producto%>
        </h1>
        <hr>
        <form action="/UploadProducto" method="post">
            <input id="codProducto" name="codProducto" value="<%= data.cod_producto%>" hidden>
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input type="text" name="name" class="form-control" value="<%=data.name%>" />
            </div>
            <div class="mb-3">
                <label class="form-label">Precio</label>
                <input type="number" name="precio" class="form-control" value="<%=data.precio%>">
            </div>
            <div class="mb-3">
                <label class="form-label">Cantidad</label>
                <input type="number" name="cantidad" class="form-control" value="<%=data.cantidad%>">
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a href="/bodega?opcion=4" class="btn btn-primary active" >Regresar</a>
        </form>
    </div>
<% } %>