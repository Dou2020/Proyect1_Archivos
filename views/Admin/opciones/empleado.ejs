<% if (data){ %>
    <div class="container">
        <h1 style="text-align: center;">Modificar Empleado <%= data.usuario%>
        </h1>
        <hr>
        <form action="/UploadEmpleado" method="post">
            <input id="codProducto" name="usuario" value="<%= data.usuario%>" hidden>
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input type="text" name="name" class="form-control" value="<%=data.name%>" />
            </div>
            <div class="mb-3">
                <label class="form-label">Rol</label>
                <input type="text" name="rol" class="form-control" value="<%=data.rol%>" />
            </div>
            <div class="mb-3">
                <label class="form-label">Subcursal</label>
                <input type="text" name="subcursal" class="form-control" value="<%=data.subcursal%>" />
            </div>
            <div class="mb-3">
                <label class="form-label">Contrase√±a</label>
                <input type="password" name="password" class="form-control" value="<%=data.password%>" />
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a href="/admin?opcion=4" class="btn btn-primary active" >Regresar</a>
        </form>
    </div>
<% } %>